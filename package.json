{
  "name": "Breeze",
  "version": "1.1.1",
  "private": true,
  "scripts": {
    "start": "node node_modules/react-native/local-cli/cli.js start",
    "test": "jest",
    "lint": "eslint src",
    "ios": "react-native run-ios",
    "android": "cd ./android && ./gradlew app:assembleDebug && ./gradlew installDebug",
    "test:ios": "detox test --configuration ios.sim.debug",
    "e2e:ios": "npm run build:ios && npm run test:ios"
  },
  "dependencies": {
    "i18next": "^15.0.4",
    "moment": "^2.24.0",
    "moment-timezone": "^0.5.23",
    "prop-types": "^15.7.2",
    "ramda": "^0.26.1",
    "react": "16.8.3",
    "react-native": "0.59.9",
    "react-native-dotenv": "^0.2.0",
    "react-native-geolocation-service": "2.0.1",
    "react-native-gesture-handler": "^1.3.0",
    "react-native-navigation": "2.21.0",
    "react-native-permissions": "^1.1.1",
    "react-native-snap-carousel": "^3.8.0",
    "react-native-sortable-list": "^0.0.23",
    "react-native-svg": "^9.2.4",
    "react-redux": "^6.0.0",
    "redux": "^4.0.1",
    "redux-persist": "^5.10.0",
    "redux-thunk": "^2.3.0",
    "styled-components": "^4.1.3",
    "styled-system": "^3.2.1",
    "uuid": "^3.3.2"
  },
  "devDependencies": {
    "babel-core": "^7.0.0-bridge.0",
    "babel-eslint": "^10.0.1",
    "babel-jest": "24.1.0",
    "detox": "^13.2.0",
    "eslint": "5.3.0",
    "eslint-config-airbnb": "17.1.0",
    "eslint-plugin-import": "^2.14.0",
    "eslint-plugin-jsx-a11y": "^6.1.1",
    "eslint-plugin-react": "^7.11.0",
    "jest": "24.1.0",
    "metro-react-native-babel-preset": "0.51.1",
    "mocha": "^6.2.0",
    "react-test-renderer": "16.6.3"
  },
  "jest": {
    "preset": "react-native"
  },
  "detox": {
    "test-runner": "mocha",
    "runner-config": "e2e/mocha.opts",
    "configurations": {
      "ios.sim.release": {
        "binaryPath": "ios/build/Build/Products/Release-iphonesimulator/Breeze.app",
        "build": "export RCT_NO_LAUNCH_PACKAGER=true && xcodebuild -project ios/Breeze.xcodeproj -UseNewBuildSystem=NO -scheme 'Breeze Prod' -configuration Release -sdk iphonesimulator -derivedDataPath ios/build -quiet",
        "type": "ios.simulator",
        "name": "iPhone X"
      }
    }
  }
}
